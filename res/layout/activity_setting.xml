<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:itheima="http://schemas.android.com/apk/res/com.arrayList.mobilesafe"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <TextView 
        style="@style/TitleStyle"
        android:text="设置中心"
        />
    
    <!-- 引入一个自定义控件 -->
    <com.arrayList.mobilesafe.activity.SettingItemView
        android:id="@+id/siv_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        itheima:item_title="自动更新设置"
        itheima:desc_on="自动更新已开启"
        itheima:desc_off="自动更新已关闭"
        ></com.arrayList.mobilesafe.activity.SettingItemView>
    
    <!-- 引入一个布局文件 
    	<include layout="@layout/view_setting_item"/> -->

</LinearLayout>
